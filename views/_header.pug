header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All Tours
  .header__logo
    a.nav__el(href='/')
      img(src='/img/logo-white.png', alt='Natours')
  nav.nav.nav--user
    if user 
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        - const img = `/img/users/${user.photo}` || user.photo
        img.nav__user-img(src=img, alt=`${user.name}`) 
        span #{user.name.split(' ')[0]} 

    else     
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign Up
